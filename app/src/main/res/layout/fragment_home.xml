<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_openbook"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/Field_Guide_button"
        android:visibility="visible"
        android:cropToPadding="false"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:layout_marginBottom="220dp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="0dp" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_camera"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/add_observation_button"
        android:visibility="visible"
        android:cropToPadding="false"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/Field_Guide_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="0dp" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_cogwheel"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/settings_button"
        android:visibility="visible"
        android:cropToPadding="false"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:layout_marginBottom="60dp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="0dp" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_notepage"
        android:adjustViewBounds="true"
        android:padding="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/my_observation_button"
        android:visibility="visible"
        android:cropToPadding="false"
        android:minHeight="130dp"
        android:minWidth="130dp"
        android:maxHeight="130dp"
        android:maxWidth="130dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="0dp" />

</RelativeLayout>