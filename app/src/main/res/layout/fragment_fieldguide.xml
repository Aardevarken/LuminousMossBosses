<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fieldguide_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:src="@drawable/silene_acaulis_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/fieldguide_image_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:cropToPadding="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title"
        android:textColor="@color/fieldguide_title"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fieldguide_description"
        android:text="Here is where the information about the plant's characteristics will go!"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/description"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_gps"
        android:textColor="@color/fieldguide_button_text"
        android:text="@string/fieldGuide_Location"
        android:id="@+id/locations_button"
        android:background="@color/fieldguide_button"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:typeface="sans"
        android:capitalize="words"
        android:elegantTextHeight="false"
        android:enabled="false"
        android:textAlignment="center" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_camera"
        android:textColor="@color/fieldguide_button_text"
        android:text="@string/fieldGuide_observation"
        android:id="@+id/add_observation_button"
        android:background="@color/fieldguide_button"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:typeface="sans"
        android:capitalize="words"
        android:elegantTextHeight="false"
        android:enabled="false"
        android:textAlignment="center"
        android:layout_alignTop="@+id/locations_button"
        android:layout_alignRight="@+id/description"
        android:layout_alignEnd="@+id/description" />

</RelativeLayout>