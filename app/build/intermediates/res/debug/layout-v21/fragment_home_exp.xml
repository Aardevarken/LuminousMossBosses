<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:id="@+id/grid"
        android:rowCount="2"
        android:columnCount="1"
        android:orientation="horizontal"
        android:layout_marginBottom="125dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_openbook"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/Field_Guide_button"
            android:visibility="visible"
            android:cropToPadding="false"
            android:minHeight="130dp"
            android:minWidth="130dp"
            android:maxHeight="130dp"
            android:maxWidth="130dp"
            android:layout_marginBottom="220dp"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_column="0" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" Field Guide"
            android:textColor="@color/home_text"
            android:id="@+id/textField_guide"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center" />
    </GridLayout>
</RelativeLayout><!-- From: file:/C:/Users/Brian/AndroidStudioProjects/Luminous/app/src/main/res/layout-v21/fragment_home_exp.xml -->